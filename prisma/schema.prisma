generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  DELIVERED
  CANCELLED
}

model Order {
  id          String      @id @default(cuid()) // Using CUID as the id, is a  more modern approach to generating unique identifiers, designed to be more collision-resistant than UUIDs. CUIDs are shorter, making them more efficient to use in databases and easier to handle in URLs.
  totalAmount Float
  totalItems  Int
  //items       OrderItem[]
  status      OrderStatus
  paid        Boolean     @default(false)
  paidAt      DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}
